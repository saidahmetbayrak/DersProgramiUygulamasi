@model DersProgramiUygulamasi.Models.Ders

<h2>Ders Düzenle</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Ad">Ders Adı</label>
        <input type="text" class="form-control" id="Ad" name="Ad" value="@Model.Ad" required />
    </div>

    <div class="form-group">
        <label for="Brans">Branş</label>
        <input type="text" class="form-control" id="Brans" name="Brans" value="@Model.Brans" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Güncelle</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Geri Dön</a>
</form>